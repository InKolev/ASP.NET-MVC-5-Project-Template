@{
    ViewBag.Title = "SecondPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles {
    @Styles.Render("~/Content/css/intro.js-2.4.0/minified/introjs.min.css")
}

<h2>Second Page</h2>

<div class="row">
    <div class="col-lg-4" data-step="1" data-intro="This is step 1">
        <h1>Step 1</h1>
    </div>
    <div class="col-lg-4" data-step="2" data-intro="This is step 2" data-hint="This is a tooltip/hint/ call it as you want it :)">
        <h1>Step 2</h1>
    </div>
    <div class="col-lg-4" data-step="3" data-intro="This is step 3">
        <h1>Step 3</h1>
    </div>
    <div class="col-lg-4" data-step="4" data-intro="This is step 4">
        <h1>Step 4</h1>
    </div>
    <div class="col-lg-4" data-step="5" data-intro="This is step 5">
        <h1>Step 5</h1>
    </div>
    <div class="col-lg-4" data-step="6" data-intro="This is step 6">
        <h1>Step 6</h1>
    </div>
</div>

@section scripts {
    <script src="~/Content/css/intro.js-2.4.0/minified/intro.min.js"></script>
    <script>
        // Check if we are redirected from another page from the step-by-step guide
        var isPageLoadedFromTutorial = RegExp('tutorial', 'gi').test(window.location.search);

        if (isPageLoadedFromTutorial) {
            introJs().setOption('showProgress', true)
               .setOption('showBullets', false)
               .setOption('doneLabel', 'Got it. I\'m done!')
               .start();
        }
    </script>
}